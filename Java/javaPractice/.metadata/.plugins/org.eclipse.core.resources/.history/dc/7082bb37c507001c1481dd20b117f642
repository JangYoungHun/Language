package Programmers;

public class skillcheck {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}
	
    public int[] solution(int n, int m) {
        int[] answer = new int[2];
        int gcd =0;
        if(n > m)
        	gcd = gcd(n,m);
        else
        	gcd = gcd(m,n);
        
        answer[0] = gcd;
        answer[1] = (n*m)/gcd;
        return answer;
    }

    int gcd(int n,int m) {
    	
    	if(m ==0)
    		return n;
    	
    	return gcd(m,n%m);
    	
    }
}
