package Programmers;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.HashSet;
import java.util.Set;

public class Number_42883 {

	public static void main(String[] args) {
		 solution("1924", 2);
	}

    public static String solution(String number, int k) {
    	
    	ArrayList<Character> list = recur(new ArrayList<Character>(),number, k);
    	StringBuilder sb = new StringBuilder();
    	for(char ch : list) {
    		sb.append(ch);
    	}
    	return sb.toString();
    }
    
   static ArrayList<Character> recur(ArrayList<Character> list ,String number, int k) {
	   
	   if(k==0) {
		   return list;
	   }
	   
    	Set<Character> set = new HashSet<Character>();
    	for(int i =0; i<number.length(); i++) {
    		set.add(number.charAt(i));
    	}
    	
    	char[] chs = new char[set.size()];
    	int index =0;
    	for(char ch : set) {
    		chs[index++] = ch;
    	}
    	
    	Arrays.sort(chs);
    	
    	for(int i =chs.length-1; i>=0; i--) {

    		for(int j=0; j<number.length(); j++) {
    			if(chs[i] == number.charAt(j)) {
    				if(j > k) break;    			
    				list.add(chs[i]);
    				return recur(list, number.substring(j+1,number.length()) , k-j);
    				
    			}
    		}
    	}    	
    	return null;
    }
    
}