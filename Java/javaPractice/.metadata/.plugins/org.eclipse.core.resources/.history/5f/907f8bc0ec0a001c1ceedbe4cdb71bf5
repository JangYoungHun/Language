package study;

import java.util.ArrayList;
import java.util.List;

//완전탑색 O(N^2)
public class LIS_Algorithm2 {

	public static void main(String[] args) {
		
		int arr[] = { 6, 2, 5, 1, 7, 4, 8, 3};
		int n = arr.length;
		
		List<Integer> list = new ArrayList<Integer>();
		list.add(0);
		
		for(int i =0; i<n; i++) {
			int value = list.get(list.size()-1);
			if(value < arr[i]) {
				list.add(arr[i]);
			}
			else {
				int index = binarySearch(0, list.size()-1, arr[i], arr);
				list.set((index+1)*(-1), arr[i]);
			}
				
		}
}
	
	static int binarySearch(int left, int right, int num, int[] arr) {
		
		while(left <= right) {
			int p = (left+right)/2;
			if(arr[p] == num) {
				return p;
			}
			else if(arr[p] < num) {
				left = p+1;				
			}
			else {
				right = p-1;
			}			
		}
			return (-1)*(left+1);
	}
	
}