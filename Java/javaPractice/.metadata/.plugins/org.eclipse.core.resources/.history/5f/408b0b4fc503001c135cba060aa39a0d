package Programmers;
//https://programmers.co.kr/learn/courses/30/lessons/12985
public class Number_12985 {

	public static void main(String[] args) {
		 solution( 8,  4, 7);
	}

    public static int solution(int n, int a, int b)
    {
        int answer = 0;
        int A = a;
        int B =b;
        
        while(true) {
         answer ++;
         A = A/2;
         B = B/2;
         
         if(A==B)
        	 break;
        }
        
        return answer;
    }
}
