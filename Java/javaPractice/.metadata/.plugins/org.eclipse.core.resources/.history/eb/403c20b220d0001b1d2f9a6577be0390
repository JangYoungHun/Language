	public static int palindrome(StringBuilder sb, int pl, int pr, int cnt) {
		
		int returnNum = 0;
		
		if(cnt ==2)
			return 2;
		
		if(pl <= pr) {
			
		if(sb.charAt(pr) == sb.charAt(pl))
			returnNum = palindrome(sb, pl++, pr--, cnt); 
		
		else{			
			int num1 = palindrome(sb, pl++, pr, cnt+1); 
			int num2 = palindrome(sb, pl, pr--, cnt+1); 
			if(num1 == 1 &&  num1 == 0 || num2 == 1 ||  num2 == 0)
				return (num1 <= num2) ? num1 : num2;
		}

		}
		
		else {
			if(cnt==1)
				return 1;
		}
			
		return returnNum;
		}

}