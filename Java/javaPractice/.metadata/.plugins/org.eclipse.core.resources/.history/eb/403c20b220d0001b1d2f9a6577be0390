public class Number_17609 {
	public static void main(String args[]) {
	Scanner sc= new Scanner(System.in);
	int N = sc.nextInt();
	StringBuilder sb; 
	for(int i=0; i<N; i++) {	
		 sb = new StringBuilder(); 
		 sb.append(sc.next());
		System.out.println( palindrome(sb, 0, sb.length()-1, 0) );
		 
	}
	
	
	
	
	
