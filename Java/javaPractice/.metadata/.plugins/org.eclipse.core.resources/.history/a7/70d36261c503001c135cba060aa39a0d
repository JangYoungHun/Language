package Programmers;
//https://programmers.co.kr/learn/courses/30/lessons/12985
public class Number_12985 {

	public static void main(String[] args) {
		 solution( 8,  4, 7);
	}

    public static int solution(int n, int a, int b)
    {
        int answer = 0;
        int A = a;
        int B =b;
        
        while(true) {
         answer ++;
         int num1 = A/2;
         int num2 = B/2;
         if(A > 2*num1)
        	 A = num1+1;
         if(B > 2*num1)
        	 B = num2+1;
         
         if(A==B)
        	 break;
        }
        
        return answer;
    }
}
