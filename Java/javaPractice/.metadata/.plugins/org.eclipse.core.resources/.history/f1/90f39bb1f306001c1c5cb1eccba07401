package Programmers;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;
import java.util.HashSet;
import java.util.List;
import java.util.Set;

public class Number_42883 {

	public static void main(String[] args) {
		 solution("1924", 2);
	}

    public static String solution(String number, int k) {
    	
    	recur(new ArrayList<Character>(),number, k,0);
    	return "";
    }
    
   static String recur(ArrayList<Character> list,String number, int k, int cnt) {
	   
	   if(k==0) {
		   return number;
	   }
	   
    	Set<Character> set = new HashSet<Character>();
    	for(int i =0; i<number.length(); i++) {
    		set.add(number.charAt(i));
    	}
    	
    	char[] chs = new char[set.size()];
    	int index =0;
    	for(char ch : set) {
    		chs[index++] = ch;
    	}
    	
    	Arrays.sort(chs);
    	
    	for(int i =chs.length-1; i>=0; i--) {
    		if(list.contains(chs[i]))
    			continue;
    		
    		for(int j=0; j<number.length(); j++) {
    			if(chs[i] == number.charAt(j)) {
    				if(j-cnt > k) break;    			
    				list.add(chs[i]);
    				return recur(list, number.substring(j,number.length()) , k-j, cnt+1);
    				
    			}
    		}
    	}
    	
    	return number;
    }
    
}