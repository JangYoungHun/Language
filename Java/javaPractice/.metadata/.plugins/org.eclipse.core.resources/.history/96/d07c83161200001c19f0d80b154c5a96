package Programmers;

import java.util.ArrayList;
import java.util.HashSet;
import java.util.List;
import java.util.regex.Matcher;
import java.util.regex.Pattern;

//https://programmers.co.kr/learn/courses/30/lessons/17677

public class Number_17677 {

	public static void main(String[] args) {
		String str1 = "aa1+aa2";
		String str2 = "AAAA12";
		 solution(str1, str2);
	}
    public static int solution(String str1, String str2) {

        
        String pattern = "([a-z]+)";
        Pattern p = Pattern.compile(pattern);
        Matcher m1 = p.matcher(str1);
        Matcher m2 = p.matcher(str2);
        
        StringBuilder sb1 = new StringBuilder();    
        StringBuilder sb2 = new StringBuilder();
        while(m1.find()) {
        	sb1.append(m1.group(0));
        }
        while(m2.find()) {
        	sb2.append(m2.group(0));
        }
        
        List<String> list1 = new ArrayList<String>();
        List<String> list2 = new ArrayList<String>();
        
         for(int i=0; i<sb1.length()-1;i++) {
        	 list1.add(sb1.substring(i,i+1));
         }
         for(int i=0; i<sb2.length()-1;i++) {
        	 list2.add(sb2.substring(i,i+1));
         }
        
         //합집합
         HashSet<String> h = new HashSet<>();
         h.addAll(list1);
         h.addAll(list2);
         
         float num1 = h.size();
         
         //교집합
         list1.retainAll(list2);
        float num2 = list1.size();
         
         
         int answer = (int)((num2/num1)* 65536);

        return answer;
    }
}
