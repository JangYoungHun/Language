package Programmers;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;
import java.util.HashSet;
import java.util.List;
import java.util.Set;

public class Number_42883 {

	public static void main(String[] args) {
		 solution("1924", 2);
	}

    public static String solution(String number, int k) {
    	
    	recur(number, k);
    	return "";
    }
    
   static String recur(String number, int k) {
	   
	   if(k==0) {
		   return number;
	   }
	   
    	Set<Character> set = new HashSet<Character>();
    	for(int i =0; i<number.length(); i++) {
    		set.add(number.charAt(i));
    	}
    	
    	char[] chs = new char[set.size()];
    	int index =0;
    	for(char ch : set) {
    		chs[index++] = ch;
    	}
    	
    	Arrays.sort(chs);
    	
    	for(int i =chs.length; i>=0; i--) {
    		for(int j=0; j<number.length(); j++) {
    			if(chs[i] == number.charAt(j)) {
    				if(j > k) break; 		
    				return recur(number.substring(j,number.length()) , k-j);
    			}
    		}
    	}
    	
    	return number;
    }
    
}